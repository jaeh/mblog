extends layout

block content
  form(action='/share/link', method='post')
    fieldset
      legend 
        | add a link to your collection: 
        | (blank/unchanged fields will be ignored)

      if errors
        for error in errors
          span.error= error

      div.fields
        //label(for='link[url]') url:
        input(type='text', value='link', name='link[url]', data-default='link')

      div.fields
        //label(for='link[title]') title:
        input(type='text', value='title', name='link[title]', data-default='title')

      div.fields
        //label(for='link[desc]') description:
        textarea(name='link[desc]', data-default='description') description

      div.fields
        //label(for='link[uploader]') uploader:
        input(type='text', value='uploader', name='link[uploader]', data-default='uploader')

      if categories
        include categories


      div
        input(type='submit', value='submit link')
